{
  "name": "kaptan-http",
  "version": "0.0.4",
  "description": "HTTP service for Kaptan framework",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "preversion": "npm run build && npm run test",
    "test": "nyc mocha --exit",
    "build": "tsc",
    "watch": "tsc --watch",
    "typedoc": "typedoc --mode file --out docs ./src",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json"
  },
  "files": [
    "build/"
  ],
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "build/**/*.js"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ibrahimduran/node-kaptan.git"
  },
  "keywords": [
    "kaptan",
    "http",
    "web"
  ],
  "author": "Ibrahim Duran",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ibrahimduran/node-kaptan-http/issues"
  },
  "homepage": "https://github.com/ibrahimduran/node-kaptan-http#readme",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/get-port": "^3.2.0",
    "@types/mocha": "^2.2.48",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "get-port": "^3.2.0",
    "mocha": "^5.0.1",
    "nyc": "^11.4.1",
    "source-map-support": "^0.5.3",
    "ts-node": "^5.0.0",
    "typedoc": "^0.10.0",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "@types/node": "^8.0.7",
    "kaptan": "0.0.13"
  }
}
